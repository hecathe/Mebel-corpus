// Выезжающее модальное окно
.modal.modal--callback#callback(data-popup)
    .modal__container
        h2.modal__title.title-second Заказать звонок

        button(type="button" aria-label="Закрыть окно" data-close).modal__close-btn.button-close
            svg(width="24" height="24")
                use(xlink:href="assets/images/sprite.svg#close")

        form.modal__form.form(action="#" method="post")
            .form__item
                label.form__label(for="form-name") Фамилия, имя, отчество
                input.form__input(id="form-name" type="text" name="name")
            .form__item
                label.form__label(for="form-tel") Телефон
                input.form__input(id="form-tel" type="tel" name="tel")
            .form__item
                label.form__label(for="form-comment") Сообщение
                input.form__input(id="form-comment" type="comment" name="comment")

            button(type="submit").form__submit-btn.button Отправить

        p.modal__bot-text Нажимая кнопку отправить вы соглашаетесь  на обработку персональных данных, а также с 
            a(href="#") Пользовательским соглашением