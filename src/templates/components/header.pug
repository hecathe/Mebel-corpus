header.header
    .container
        nav.header__nav
            .header__top.header-wrap
                button.header__location-btn
                    svg(width="15" height="15")
                        use(xlink:href="assets/images/sprite.svg#icon-gps-device")
                    span Санкт-Петербург
                ul.header__list
                    li.header__item
                        a.header__link(href="#") Как купить 
                    li.header__item
                        a.header__link(href="#") Гарантии
                    li.header__item
                        a.header__link(href="#") Скидки и акции
                    li.header__item
                        a.header__link(href="#") Контакты
                .header__info
                    .header__graphic
                        .header__time <span>Пн-Пт:</span> 09:00 – 18:00
                        .header__time <span>Сб:</span> 10:00 – 13:00
                    .header__note Прием заказов на сайте
                        span круглосуточно
                a.header__tel(href="tel:+78123093154") 
                    svg(width="18" height="18")
                        use(xlink:href="assets/images/sprite.svg#telephone")
                    span +7 (812) 309-31-54

            .header__primary.header-wrap
                a.header__logo(href="#")
                    img(src="assets/images/logo.png", alt="")
                button.header__toggle-menu.button
                    svg(width="14" height="14")
                        use(xlink:href="assets/images/sprite.svg#hamburger-button")
                    span Каталог
                .header__search
                    label.header__search-label
                        input.header__search-input(type="search" placeholder="Поиск по сайту")
                .header__user-menu
                    a(href="#").header__account
                        svg(width="25" height="25")
                            use(xlink:href="assets/images/sprite.svg#user-outlined")
                        span Личный кабинет
                    a(href="#").header__cart
                        svg(width="27" height="27")
                            use(xlink:href="assets/images/sprite.svg#cart")
                        sup 3
                        span Корзина

            ul.header__menu.header-menu
                li.header-menu__item
                    a.header-menu__link(href="#") О компании
                li.header-menu__item
                    a.header-menu__link(href="#") Услуги
                li.header-menu__item
                    a.header-menu__link(href="#") Новости
                li.header-menu__item
                    a.header-menu__link(href="#") Новинки
                li.header-menu__item
                    a.header-menu__link(href="#") Документы
                li.header-menu__item
                    a.header-menu__link(href="") Пресс-кит
                li.header-menu__item
                    a.header-menu__link(href="#") Снято с производства
                
            