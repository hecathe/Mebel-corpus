                    li.pay-list__item
                        svg.pay-list__logo(width="45" height="29")
                            use(xlink:href="assets/images/sprite.svg#applePay")
            .footer__wrap
                form.footer__form.subscription-form(action="#" method="post")
                    label(for="subscription").subscription-form__label.footer__caption Подписаться на новости
                    .subscription-form__wrap
                        input.subscription-form__input(type="email" id="subscription" placeholder="Введите ваш e-mail")
                        button.subscription-form__btn.button(type="submit" aria-label="Отправить")
                            svg(width="20" height="16")
                                use(xlink:href="assets/images/sprite.svg#arrow")
