                    li.social-list__item
                        a.social-list__link(href="#" aria-label="instagram")
                            svg(width="30" height="30")
                                use(xlink:href="assets/images/sprite.svg#instagram")
            .footer__wrap
                span.footer__caption Мы принимаем оплату
                ul.footer__pays.pay-list
                    li.pay-list__item
                        svg.pay-list__logo(width="56" height="17")
                            use(xlink:href="assets/images/sprite.svg#visa")
                    li.pay-list__item
                        svg.pay-list__logo(width="54" height="16")
