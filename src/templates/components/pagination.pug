.pagination
    button.pagination__btn.button Показать еще
    ul.pagination__list
        li.pagination__item
            a.pagination__nav.pagination__nav--prev(href="#" aria-label="Назад")
                svg(width="24" height="24")
                    use(xlink:href="assets/images/sprite.svg#arrow-back")
        li.pagination__item
            a.pagination__link.active(href="#") 1
        li.pagination__item
            a.pagination__link(href="#") 2
        li.pagination__item
            a.pagination__link(href="#") 3
        li.pagination__item
            a.pagination__nav.pagination__nav--next(href="#" aria-label="Вперел")
                svg(width="24" height="24")
                    use(xlink:href="assets/images/sprite.svg#arrow-back")
