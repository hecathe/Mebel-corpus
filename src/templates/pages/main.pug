extends ../template

block variables
    - var title = 'Главная'

block content
    main
        // Слайдер
        section.main-slider.mb-90
            .swiper-container(data-swiper="one-slide")
                .swiper-wrapper 
                    .swiper-slide
                        .main-slider__item
                            img.main-slider__img(src="assets/images/banner-min.jpg", alt="")
                            .container
                                .main-slider__text-wrap
                                    h2.main-slider__title
                                        span.main-slider__small Новая коллекция 
                                        span.main-slider__big диванов 
                                        span.main-slider__middle со скидкой
                                    a.main-slider__button.button(href="#") Перейти к скидкам
                                    .main-slider__sale-wrap
                                        span.main-slider__sale-caption Скидка
                                        span.main-slider__sale-val 30%
                    .swiper-slide
                        .main-slider__item
                            img.main-slider__img(src="assets/images/banner-min.jpg", alt="")
