extends ../template

block variables
    - var title = 'Раздел каталога'

block content
    main
        include ../components/breadcrumbs.pug

        // Каталог
        section.catalog-section.mb-90
            .container
                h1.catalog-section__title.title-first.mb-60 Мебель для гостинной
                .catalog-section__wrap
                    .catalog-section__aside.catalog-aside
                        ul.catalog-aside__list
                            li.catalog-aside__item
                                a.catalog-aside__link.active(href="#") Стенки
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Модульные гостиные
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Тумбы под телевизор
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Журнальные столики
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Письменные столы
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Компьютерные столы
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Обеденные столы
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Столы книжки
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Офисные стулья
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Офисные и рабочие кресла
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Навесные полки
                            li.catalog-aside__item
                                a.catalog-aside__link(href="#") Стеллажи

                    .catalog-section__content
                        .catalog-section__filter-menu.filter-menu
                            .filter-menu__select-wrap.select
                                select(name="")
                                    option(value="") Сортировка
                                    option(value="") По наименованию
                                    option(value="") По популярности
                            .filter-menu__select-wrap.select
                                select(name="")
                                    option(value="") Цена
                                    option(value="") Недорогие
                                    option(value="") Дорогие
                            .filter-menu__select-wrap.select
                                select(name="")
                                    option(value="") Материал
                                    option(value="") Дерево
                            button.filter-menu__btn(data-modal-trigger="full-filter")
                                svg(width="12" height="12")
                                    use(xlink:href="assets/images/sprite.svg#settings")
                                span Фильтр

                        // Сетка каталога
                        ul.catalog-section__grid.catalog-list
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug
                            li.catalog-list__item
                                include ../components/product-card.pug

                        // Пагинация
                        .catalog-section__bottom
                            include ../components/pagination.pug

                        // Выезжающий фильтр
                        .catalog-section__full-filter.full-filter.modal#full-filter(data-popup)
                            button.full-filter__btn.button-close(data-close)
                                svg(width="24" height="24")
                                    use(xlink:href="assets/images/sprite.svg#close")
                            form.full-filter__form
                                .full-filter__title Все фильтры
                                .full-filter__wrapper
                                    .full-filter__select.filter-menu__select-wrap.select
                                        select.filter-menu__select(name="")
                                            option(value="") Город
                                            option(value="") Санкт-Петербург
                                            option(value="") Москва
                                            option(value="") Краснодар
                                    label.full-filter__label.checkbox
                                        input.checkbox__input.visually-hidden(type="checkbox" name="sale" value="")
                                        span.checkbox__caption Акционный товар

                                .full-filter__divider

                                fieldset.full-filter__group.full-filter__group--col
                                    legend.full-filter__caption Производитель
                                    label.full-filter__label.checkbox
                                        input.checkbox__input.visually-hidden(type="checkbox" name="manufacturer" value="standmebel")
                                        span.checkbox__caption Стендмебель
                                    label.full-filter__label.checkbox
                                        input.checkbox__input.visually-hidden(type="checkbox" name="manufacturer" value="mif")
                                        span.checkbox__caption МИФ
                                    label.full-filter__label.checkbox
                                        input.checkbox__input.visually-hidden(type="checkbox" name="manufacturer" value="tex")
                                        span.checkbox__caption Текс
                                    label.full-filter__label.checkbox
                                        input.checkbox__input.visually-hidden(type="checkbox" name="manufacturer" value="interior-center")
                                        span.checkbox__caption Интерьер центр
                                    label.full-filter__label.checkbox
                                        input.checkbox__input.visually-hidden(type="checkbox" name="manufacturer" value="ololo")
                                        span.checkbox__caption Интерьер центр

                                    button.full-filter__more-btn(type="button")
                                        span еще 10
                                        svg(width="10" height="10")
                                            use(xlink:href="assets/images/sprite.svg#arrow-downward")

                                .full-filter__divider

                                fieldset.full-filter__group.full-filter__group--row
                                    legend.full-filter__caption Ширина (мм)
                                    div
                                        input(type="text" class="js-range-slider" name="width" value="" data-type="double" data-min="1000" data-max="250000" data-from="1000" data-to="250000" data-grid="true")
                                        input(type="text" name="width_MIN" value="1000" class="full-filter__hidden-input")
                                        input(type="text" name="width_MAX" value="250000" class="full-filter__hidden-input")

                                .full-filter__divider

                                fieldset.full-filter__group.full-filter__group--row
                                    legend.full-filter__caption Длина (мм)
                                    div
                                        input(type="text" class="js-range-slider" name="length" value="" data-type="double" data-min="1000" data-max="250000" data-from="1000" data-to="250000" data-grid="true")

                                .full-filter__divider

                                fieldset.full-filter__group.full-filter__group--row
                                    legend.full-filter__caption Высота (мм)
                                    div
                                        input(type="text" class="js-range-slider" name="height" value="" data-type="double" data-min="1000" data-max="250000" data-from="1000" data-to="250000" data-grid="true")

                                .full-filter__divider

                                fieldset.full-filter__group.full-filter__group--row
                                    legend.full-filter__caption Цена (₽)
                                    div
                                        input(type="text" class="js-range-slider" name="price" value="" data-type="double" data-min="1000" data-max="250000" data-from="1000" data-to="250000" data-grid="true")

                                .full-filter__divider

                                .full-filter__radios
                                    label.full-filter__label.radio-btn
                                        input.radio-btn__input.visually-hidden(type="radio" name="price" value="")
                                        span.radio-btn__caption Оптовые цены
                                    label.full-filter__label.radio-btn
                                        input.radio-btn__input.visually-hidden(type="radio" name="price" value="")
                                        span.radio-btn__caption Розничные цены

                                .full-filter__buttons
                                    button.full-filter__reset-btn.button(type="submit") Принять
                                    button.full-filter__reset-btn.button.button--ghost(type="reset") Сбросить фильтры

        include ../components/about-block.pug
